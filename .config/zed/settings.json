//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette

{
  "auto_update_extensions": {
    "scss": false,
  },
  "show_edit_predictions": false,
  "minimap": {
    "show": "always",
    "display_in": "all_editors",
  },
  "ssh_connections": [
    {
      "host": "tiwi",
      "projects": [
        {
          "paths": ["/home/syn/services"],
        },
      ],
    },
  ],

  "agent": {
    "inline_assistant_model": {
      "provider": "openai",
      "model": "mistralai/devstral-small",
    },
    "model_parameters": [],
    "default_model": {
      "provider": "openai",
      "model": "anthropic/claude-sonnet-4.5",
    },
  },

  "languages": {
    "Rust": {
      "tab_size": 4,
    },
    "Python": {
      "tab_size": 4,
    },
  },

  "language_models": {
    "openai": {
      "api_url": "https://api.vsegpt.ru/v1",
      "available_models": [
        {
          "name": "anthropic/claude-sonnet-4.5",
          "display_name": "@Claude Sonnet 4.5",
          "max_tokens": 24000,
          "max_output_tokens": 2048,
        },
        {
          "name": "anthropic/claude-haiku-4.5",
          "display_name": "@Claude Haiku 4.5",
          "max_tokens": 128000,
          "max_output_tokens": 4096,
        },
        {
          "name": "mistralai/devstral-small",
          "display_name": "@Devstral Small",
          "max_tokens": 128000,
          "max_completion_tokens": 4096,
          "max_output_tokens": 4096,
        },
        {
          "name": "mistralai/devstral-medium",
          "display_name": "@Devstral Medium",
          "max_tokens": 128000,
          "max_completion_tokens": 4096,
          "max_output_tokens": 4096,
        },
        {
          "name": "qwen/qwen3-coder",
          "display_name": "@Qwen 3 Coder",
          "max_tokens": 128000,
          "max_completion_tokens": 4096,
          "max_output_tokens": 4096,
        },
        {
          "name": "openai/gpt-5.1-codex-mini",
          "display_name": "@GPT 5.1 Codex Mini",
          "max_tokens": 128000,
          "max_completion_tokens": 16384,
          "max_output_tokens": 16384,
        },
      ],
    },
    "ollama": {
      "available_models": [
        {
          "name": "gemma3n:latest",
          "max_tokens": 128000,
        },
      ],
    },
  },

  "git_panel": {
    "dock": "right",
  },
  "icon_theme": "VSCode Icons for Zed (Dark)",
  "autosave": "on_focus_change",
  "show_completions_on_input": true,

  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false,
    "disabled_globs": ["*"],
  },

  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "on_yank",
  },

  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_line_height": { "custom": 1.5 },
  "ensure_final_newline_on_save": false,
  "extend_comment_on_newline": false,
  "buffer_font_weight": 300,

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Sublime Material Dark",
  },
  "auto_update": false,
  "base_keymap": "VSCode",
  "indent_guides": {
    "coloring": "indent_aware",
  },
  "tab_size": 2,
}
