//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette

{
  "agent": {
    "inline_assistant_model": {
      "provider": "openai",
      "model": "mistralai/devstral-small"
    },
    "model_parameters": [],
    "default_model": {
      "provider": "openai",
      "model": "anthropic/claude-sonnet-4"
    }
  },

  "language_models": {
    "openai": {
      "api_url": "https://api.vsegpt.ru/v1",
      "available_models": [
        {
          "name": "anthropic/claude-sonnet-4",
          "display_name": "@Claude Sonnet 4",
          "max_tokens": 16000,
          "max_output_tokens": 2048
        },
        {
          "name": "mistralai/devstral-small",
          "display_name": "@Devstral Small",
          "max_tokens": 128000,
          "max_completion_tokens": 4096,
          "max_output_tokens": 4096
        },
        {
          "name": "mistralai/devstral-medium",
          "display_name": "@Devstral Medium",
          "max_tokens": 128000,
          "max_completion_tokens": 4096,
          "max_output_tokens": 4096
        }
      ]
    }
  },

  "git_panel": {
    "dock": "right"
  },
  "icon_theme": "VSCode Icons (Dark)",
  "autosave": "on_focus_change",
  "show_completions_on_input": true,
  "features": {
    "edit_prediction_provider": null
  },

  "edit_predictions": {
    "mode": "subtle"
  },

  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "on_yank"
  },

  "file_finder": {},

  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_line_height": { "custom": 1.5 },
  "ensure_final_newline_on_save": false,
  "extend_comment_on_newline": false,
  "buffer_font_weight": 300,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "VSCode Dark Modern"
  },
  "auto_update": false,
  "base_keymap": "VSCode",
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "tab_size": 2
}
